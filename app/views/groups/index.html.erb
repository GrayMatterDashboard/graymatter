
<div class="row">
    <% if action_name === 'edit' %>
        <%= react_component("Groups", {group: @group_payload, action: 'show'}, { prerender: false }) %>
    <% else %>
        <%= react_component("Groups", {group: @group_payload, action: 'show'}, { prerender: false }) %>
    <% end %>
</div>
<br/>
<br/>
<br/>
<br/>
