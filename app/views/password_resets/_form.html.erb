<%= @user.first_name %>
<%= simple_form_for(@user, remote: request.xhr?, html: { data: { modal: true } }) do |f| %>
  <div class="modal-content">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
  </div>

  <div class="modal-footer">
      this is the actual form fucker
    <%= f.button :submit, class: 'btn-success' %>
  </div>
<% end %>


<script>
    $(document).ready(function(){
        $('.modal').modal();
    });
</script>
