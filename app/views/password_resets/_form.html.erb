<%= form_for new_password_reset_path, remote: request.xhr?, html: { data: { modal: true } } do |f| %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <div class="modal-footer">
        <%= f.button :submit, class: 'btn-success' %>
    </div>
<% end %>
