<div class="mdl-grid demo-content">
    <div class="demo-logo mdl-color--black mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
        <%= image_tag 'main-logo.png', class: 'dashboard-logo' %>
    </div>

    <div class="demo-cards mdl-cell mdl-cell--4-col mdl-cell--8-col-tablet mdl-grid mdl-grid--no-spacing">

        <div class="demo-updates mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--12-col-desktop">
            <div class="mdl-card__title mdl-card--expand" style='background-color: #fdb52c'>
                <h2 class="mdl-card__title-text">Updates</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-color-text--grey-600">
                Any critical updates you have for the studends.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a href="#" class="mdl-button mdl-js-button mdl-js-ripple-effect">Read More</a>
            </div>
        </div>
    </div>
    <div class="demo-cards mdl-cell mdl-cell--4-col mdl-cell--8-col-tablet mdl-grid mdl-grid--no-spacing">
        <div class="demo-updates mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--12-col-desktop">
            <div class="mdl-card__title mdl-card--expand mdl-color--light-green-A400">
                <h2 class="mdl-card__title-text">Message</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-color-text--grey-600">
                Something else here for student quick reference, maybe new messages?
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a href="#" class="mdl-button mdl-js-button mdl-js-ripple-effect">Read More</a>
            </div>
        </div>
    </div>
    <div class="demo-cards mdl-cell mdl-cell--4-col mdl-cell--8-col-tablet mdl-grid mdl-grid--no-spacing">
        <div class="demo-options mdl-card blue-grey lighten-4 mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--3-col-tablet mdl-cell--12-col-desktop">
            <div class="mdl-card__supporting-text mdl-color-text--black-500">
                <form action="#">
                    <h6>Things I am assigned to:</h6>
                    <% @tasks.each do |task| %>
                    <p>
                        <label>
                            <input type="checkbox" />
                            <span style="color: #000"><%= task["task"] %></span>
                        </label>
                    </p>
                    <% end %>
                </form>
            </div>
        </div>
    </div>
    <div class="demo-cards mdl-cell mdl-cell--6-col mdl-cell--y-col-tablet mdl-grid mdl-grid--no-spacing hoverable">
        <div class="facebook-feed mdl-card mdl-shadow--2dp mdl-cell mdl-cell--6-col mdl-cell--6-col-tablet mdl-cell--12-col-desktop">
            <div class="mdl-card__title mdl-card--expand mdl-color--indigo-A700">
                <h2 class="mdl-card__title-text">facebook Feed</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-color-text--grey-600">
                The last post posted on facebook. When clicked this will take the
                user to facebook.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a href="#" class="mdl-button mdl-js-button mdl-js-ripple-effect">Read More</a>
            </div>
        </div>
    </div>
    <div class="demo-cards mdl-cell mdl-cell--6-col mdl-cell--y-col-tablet mdl-grid mdl-grid--no-spacing hoverable">
        <div class="instagram-feed mdl-card mdl-shadow--2dp mdl-cell mdl-cell--6-col mdl-cell--6-col-tablet mdl-cell--12-col-desktop">
            <div class="mdl-card__title mdl-card--expand" style='background-color: #1cb0c0'>
                <h2 class="mdl-card__title-text">Instagram Feed</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-color-text--grey-600">
                The last post posted on Instagram. When clicked this will take the
                user to Instagram.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a href="#" class="mdl-button mdl-js-button mdl-js-ripple-effect">Read More</a>
            </div>
        </div>
    </div>

    <div class='row' style="margin-top: 30px">
        <% @pages_payload.each do |media| %>
            <%= get_social_media(media) %>
        <% end %>
    </div>

</div>

