<div class="cohort-form-container">
    <%= form_for [:admin, @cohort] do |f| %>
        <div class="row">
            <div class="col m6">
                <div class="card">
                    <div class="card-content">
                        <span class='card-title'><%= @page_title %></span>
                        <%= f.label :cohort_name %>
                        <%= f.text_field :name, class: '' %>
                        <%= f.label :color %><br>
                        <%#= f.text_field :color, id: 'colorpicker'%>
                        <%= f.text_field :color, type: 'color', class: 'basic' %>
                    </div>
                    <div class="card-action">
                        <div class='right-align'>
                            <%= f.submit 'Submit', class: 'btn light-green accent-4' %>
                            <%= link_to "Cancel", admin_cohorts_path, class: 'btn red' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

