<div class="row">
    <% @workshops.each do |workshop| %>
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image" style='border-bottom: 1px solid #ccc'>
                    <%= image_tag workshop[:logo], class: 'workshop-logo' %>
                    <a class="btn-floating halfway-fab waves-effect waves-light blue"><i class="material-icons">arrow_forward</i></a>

                    <i class="far fa-hand-point-right"></i>
                </div>
                <div class="card-content">
                    <span class="card-title workshop-card-title"><%= workshop[:name] %></span>
                    <p><%= workshop[:description] %></p>
                </div>
            </div>
        </div>
    <% end %>
</div>
