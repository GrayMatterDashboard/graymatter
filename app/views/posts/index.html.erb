<div class='message-information-bar'><span class='light-text'>Cohort</span> <span>Cohort One</span>
    <span class="unread-count-container light-text">Unread <span class='unread-count'>3</span></span>
</div>

<hr>


<%= form_for(@post, url: posts_path, html: { class: 'form-horizontal' }) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="input-field col s8">
                    <i class="material-icons prefix">mode_edit</i>
                    <%= f.text_area :body, id: 'icon_prefix2', class: 'materialize-textarea' %>
                    <label for="icon_prefix2">Post a message or ask a question</label>
                </div>
            </div>
        </div>
    </div>

    <div class="actions">
        <%= f.submit "submit", class: "btn btn-success"%>
    </div>
<% end %>


<section class='horizontal-line'></section>

<div class="container">
        <% @count = 0 %>
    <% @posts.each do |post| %>
        <div>
            <span class="count-container hide-on-small-only">
                <div class='comment-count'><%= @count += 2 %></div>
        
            </span>
            <span class="post-question">
                <%= link_to post_path(post.id) do %>
                    <p><%= truncate(post.body, :length => 100, :omission => '... (more)') %></p>
                <% end %>
            </span>
            <span class="question-cite">
                <p>14 hours ago by Kim</p>
            </span>
        </div>
    <% end %>
</div>
