<div class="mdl-grid">
    <% @groups.each do |group| %> 
        <%= link_to groups_show_path do %>
            <div class="mdl-cell mdl-cell--4-col demo-card-image mdl-card mdl-shadow--2dp" style="background: url(<%= asset_path group[:group_image] %>) center / cover">
                <div class="mdl-card__title mdl-card--expand"></div>
                <div class="mdl-card__actions">
                    <span class="demo-card-image__filename"><%= group[:group_name] %></span>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
