<div class="row">
    <% @workshops.each do |workshop| %>
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image" style='border-bottom: 1px solid #ccc'>
                    <%= image_tag workshop[:logo], class: 'workshop-logo' %>
                    <%= link_to workshop_path(workshop[:id]), class: "btn-floating halfway-fab waves-effect waves-light blue" do %>
                        <i class="material-icons">arrow_forward</i>
                    <% end %>
                </div>
                <div class="card-content">
                    <span class="card-title workshop-card-title"><%= workshop[:title] %></span>
                    <p><%= workshop[:description] %></p>
                </div>
            </div>
        </div>
    <% end %>
</div>
